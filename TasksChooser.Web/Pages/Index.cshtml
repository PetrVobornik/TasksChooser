@page "{filename?}"
@model Amporis.TasksChooser.Web.Pages.IndexModel
@if (Model.Tasks.AddHtmlCode)
{
    <!DOCTYPE html>

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head runat="server">
        <title>Test­</title>
        <style>
        body {
            /*font-family: Verdana, Geneva, Tahoma, sans-serif;*/
            font-family: "Segoe UI", Arial, sans-serif;
            margin: 0;
        }
        h3 { margin: 0 0 0.5em 0; padding: 0; }
        @Html.Raw(Model.Tasks.CustomStyle)
        </style>
        @if (Model.Tasks.AddCopyProtection)
        {
            <style>
                div.content {
                    z-index: 1;
                    /*padding-top: 32px;*/
                    -webkit-user-select: none;
                    -khtml-user-select: none;
                    -moz-user-select: none;
                    -ms-user-select: none;
                    -o-user-select: none;
                    user-select: none;
                }

                div.mask {
                    z-index: 10;
                    position: absolute;
                    left: 0;
                    top: 0;
                    width: 100%;
                    height: 100%;
                    background-color: #FFFFFF;
                    opacity: 0.01;
                }
            </style>
        }
    </head>
    <body>
        <div class="content">
            @Html.Raw(Model.Tasks.Result)
        </div>
        @if (Model.Tasks.AddCopyProtection)
        {
            <div class="mask">
                &nbsp;
            </div>
        }
    </body>
</html>
}
else
{
@Html.Raw(Model.Tasks.Result)
}